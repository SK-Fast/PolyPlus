{
    "name": "Poly+",
    "description": "By DevPixels",
    "version": "1.4",
    "permissions": [],
    "content_scripts": [

        {
            "matches": ["https://*.polytoria.com/games/*"],
            "js": ["game_page.js"]
        },

        {
            "matches": ["https://*.polytoria.com/games/"],
            "js": ["main_game_page.js"]
        },

        {
            "matches": ["https://*.polytoria.com/shop/*"],
            "js": ["catalog_inspector.js"]
        },

        {
            "matches": ["https://*.polytoria.com/shop/"],
            "js": ["catalog_page.js"]
        },

        {
            "matches": ["https://*.polytoria.com/create/*"],
            "js": ["create_page.js"]
        },

        {
            "matches": ["https://*.polytoria.com/user/*"],
            "js": ["profile_page.js"]
        },

        {
            "matches": ["https://*.polytoria.com/my/settings*"],
            "js": ["settings_page.js"]
        },

        {
            "matches": ["https://*.polytoria.com/forum/post/*"],
            "js": ["forumpost_page.js"]
        }
    ],
    "manifest_version": 3,
    "icons": {
       "128": "PolyPlus.png" }
}